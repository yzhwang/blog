!!! 5
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu+Mono:400,700,400italic,700italic')
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu:300,400,500,700,300italic,400italic,500italic,700italic')
      link(rel='stylesheet', href='/css/style.css')
      link(rel='stylesheet', href='http://yandex.st/highlightjs/7.3/styles/monokai.min.css')
      script(src="http://yandex.st/highlightjs/7.3/highlight.min.js")
  body
    div.main
      header.header-home 
        img(src=locals.url+'/img/juan.jpg').juan
        h1.title
          a(href=locals.url)= locals.name
        p.description= locals.description
        nav.navigation
          ul
            li
              a(href="/") Home
            li  
              a(href="/about.html") About
            li
              a(href="/projects.html") Projects
            li 
              a(href='http://twitter.com/olverajuanluis').twitter Twitter 
            li 
              a(href='http://github.com/thinkxl').github Github

      div#content
        block content
          h2 Welcome to zombocom!
      footer
